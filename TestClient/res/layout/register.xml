<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:fadingEdge="none" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:fillViewport="true"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:gravity="center" android:orientation="vertical"
                  android:layout_width="fill_parent" android:layout_height="fill_parent">

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50sp"
                android:background="@drawable/logo_lit_test">
        </FrameLayout>

        <LinearLayout android:orientation="vertical"  android:layout_height="wrap_content" android:layout_width="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginBottom="15dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:singleLine="false"
                      android:text="Имя"
                      android:layout_marginTop="10sp"
                      android:textSize="14sp"
                      android:textColor="@android:color/secondary_text_light_nodisable"/>

            <EditText  android:id ="@+id/activity_register_name_box"
                    android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:singleLine="false"
                      android:text="Фамилия"
                      android:layout_marginTop="10sp"
                      android:textSize="14sp"
                      android:textColor="@android:color/secondary_text_light_nodisable"/>

            <EditText  android:id ="@+id/activity_register_lastname_box"
                    android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:maxWidth="250.0dip"
                       android:textColor="@android:color/black"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:singleLine="false"
                      android:text="Номер группы/класса"
                      android:layout_marginTop="10sp"
                      android:textSize="14sp"
                      android:textColor="@android:color/secondary_text_light_nodisable"/>

            <EditText  android:id ="@+id/activity_register_group_box"
                    android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:maxWidth="250.0dip"
                       android:textColor="@android:color/black"
                       android:layout_gravity="left|center_vertical"/>

        <Button android:id ="@+id/activity_register_next_btn"
                android:textSize="15sp"
                android:textColor="@android:color/primary_text_light"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip" android:layout_width="240.0dip"
                android:layout_height="51.0dip" android:text="Далее"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>