<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_open_temp_test_and_results_Ip_adress"
                android:hint="Ip адрес сервера"
                android:maxLines="1"
                android:singleLine="true"  android:textSize="20dp" android:layout_margin="5dp"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" android:layout_margin="4dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_open_temp_test_and_results_NameBox"
                android:hint="Ваше имя"
                android:maxLines="1"
                android:singleLine="true"  android:textSize="20dp" android:layout_margin="5dp"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" android:layout_margin="4dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_open_temp_test_and_results_LastName"
                android:hint="Ваша фамилия"
                android:maxLines="1"
                android:singleLine="true"  android:textSize="20dp" android:layout_margin="5dp"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" android:layout_margin="4dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_open_temp_test_and_results_Group"
                android:hint="Номер группы/класса"
                android:maxLines="1"
                android:singleLine="true"  android:textSize="20dp" android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="7dp"/>
    </LinearLayout>



</LinearLayout>