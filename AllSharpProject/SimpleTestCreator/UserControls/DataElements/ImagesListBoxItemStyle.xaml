<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<DataTemplate x:Key="ImagesListBoxItemTemplate">
		<Border BorderThickness="1" BorderBrush="#FF5B4A4A">
			<Border.Effect>
				<DropShadowEffect BlurRadius="3" Color="#FF786A6A" ShadowDepth="0" Direction="430"/>
			</Border.Effect>
			<StackPanel Background="#FFE5E5E5">
				<Border BorderBrush="#FF6B5C5C" BorderThickness="1"> 
					<Image Source="{Binding Image}" Height="50" Width="50"/>
				</Border>			 
			  <TextBlock TextWrapping="Wrap" Text="{Binding Text}" Margin="0,2,0,0"/>
		    </StackPanel>
		</Border>	
	</DataTemplate>
	<!-- Здесь необходимо определить записи словаря ресурсов. -->
</ResourceDictionary>