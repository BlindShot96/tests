<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

	xmlns:local="clr-namespace:SimpleTestCreator"
	mc:Ignorable="d"
	x:Class="SimpleTestCreator.MenuControl"
	x:Name="UserControl"
	d:DesignWidth="826.6" d:DesignHeight="26.96">
	<StackPanel Height="72.293" VerticalAlignment="Top" Margin="0,0,0,-45.333">
		<Menu>
			<MenuItem Header="File">
				<MenuItem Header="New"/>
				<MenuItem Header="Open"/>
				<MenuItem Header="Save"/>
				<MenuItem Header="SaveAs..."/>
				<Separator/>
				<MenuItem Header="Exit"/>
			</MenuItem>
			<MenuItem Header="Edit">
				<MenuItem Header="Undo"/>
				<MenuItem Header="Redo"/>
				<Separator/>
				<MenuItem Header="Cut"/>
				<MenuItem Header="Copy"/>
				<MenuItem Header="Paste"/>
			</MenuItem>
		</Menu>
		<ToolBarTray>
			<ToolBar x:Name="ToolBar1" >
				<local:MainToolBar/>                         
			</ToolBar>
			<ToolBar>
				<local:QuestionToolBar/>
			</ToolBar>
                    
		</ToolBarTray>
	</StackPanel>
</UserControl>