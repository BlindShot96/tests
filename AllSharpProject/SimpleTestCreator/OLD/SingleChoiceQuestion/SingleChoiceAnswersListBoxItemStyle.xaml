	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:testLibrary="clr-namespace:TestLibrary;assembly=TestLibrary">
	<DataTemplate x:Key="SingleChoiceAnswersListBoxItemTemplate" DataType="{x:Type testLibrary:Answer}">
		<Border BorderThickness="1" BorderBrush="#FF494747" Background="#FFAD9F9F">
			<RadioButton  Content="{Binding Data.Text}" IsChecked="{Binding IsTrue}"/>
		</Border>		
	</DataTemplate>
